<h1>Burgers!</h1>

<img src="assets/img/burger2.jpg" class="my_images" alt="Profile pic">

<h2>Burgers for you to destroy!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>

        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>burger that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
         
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="burger_name">
  </div>

  <div class="form-group">
    <label for="dev"> </label><br>
    <input type="radio" name="devoured" value="1" > Devoured!<br>
    <input type="radio" name="devoured" value="0"> To Destroy!
  </div>

  <button type="submit">Add burger</button>
</form>
